{% extends 'base.html.twig' %}

{% block body %}
    <h1>Client</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ client.client }}</td>
            </tr>
            <tr>
                <th>Matter</th>
                <td>{{ client.matter }}</td>
            </tr>
            <tr>
                <th>Issuer</th>
                <td>{{ client.issuer }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ client.language }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ client.currency }}</td>
            </tr>
            <tr>
                <th>Invoice</th>
                <td>{{ client.invoice }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if client.date %}{{ client.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ client.amount }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ client.discount }}</td>
            </tr>
            <tr>
                <th>Vat</th>
                <td>{{ client.vat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('client_edit', { 'id': client.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
